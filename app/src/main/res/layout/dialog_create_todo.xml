<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            style="@style/blueActionBar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:scaleType="center"
            android:contentDescription="@string/app_name" android:text="@string/dialog_create_title" android:textSize="30dp"
            android:textIsSelectable="false" android:textAlignment="center"
            android:singleLine="true" android:paddingTop="13dp"/>
    <EditText
            android:id="@+id/title"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="@string/title" />
    <EditText
            android:id="@+id/description"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:hint="@string/description"/>
</LinearLayout>